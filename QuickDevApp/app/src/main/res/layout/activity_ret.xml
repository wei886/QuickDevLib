<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ret"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="quickdev.com.http.RetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retrofit_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:text="get" />

        <TextView
            android:id="@+id/tv_retrofit_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ccc" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retrofit_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:text="post" />

        <TextView
            android:id="@+id/tv_retrofit_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ccc" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retrofit_synchronism"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:text="synchronism" />

        <TextView
            android:id="@+id/tv_retrofit_synchronism"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ccc" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retrofit_asyn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="12dp"
            android:text="asyn" />

        <TextView
            android:id="@+id/tv_retrofit_asyn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ccc" />

    </LinearLayout>


</LinearLayout>
